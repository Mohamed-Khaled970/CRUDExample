@model IEnumerable<PersonResponse>

@{
    Layout = null;   // مهم جداً عشان PDF يبقى نظيف ومفيش layout
    var cssPath = $"{Context.Request.Scheme}://{Context.Request.Host}/css/site.css";
}

<link rel="stylesheet" href="@cssPath" />

<h2 style="text-align:center; margin-bottom:20px;">Persons List</h2>

<table class="persons-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Country</th>
            <th>Phone</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td>@p.Country</td>
                <td>@p.PhoneNumber</td>
                <td>@p.Address</td>
            </tr>
        }
    </tbody>
</table>